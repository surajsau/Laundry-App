<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_white"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="26 Apr"
        android:textSize="12sp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOcassion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Birthday Party"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <com.halfplatepoha.laundry.ui.TextView
        android:id="@+id/tvShirt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Germany Jersey"
        app:drawableLeftCompat="@drawable/t_shirt"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Blue Jeans"
        app:drawableLeftCompat="@drawable/trousers"/>

</LinearLayout>